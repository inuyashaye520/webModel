doctype html
html(ng-app="app")
    head
        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title 管理系统
        base(href="${ContextPath}/admin/")
        link(href="${ContextPath}/webjars/bootstrap-css/3.3.6/css/bootstrap.min.css", rel="stylesheet")
        link(href="${ContextPath}/webjars/gentelella/1.4.0/build/css/custom.min.css", rel="stylesheet")
        //link(href="${ContextPath}/webjars/css-spaces/0.3.5/dist/spaces.min.css", rel="stylesheet")
        link(href="${ContextPath}/webjars/angular-ui-select/0.19.1/dist/select.min.css?version=0.19.1", rel="stylesheet")
        link(href="${ContextPath}/webjars/angular-ui-notification/0.2.0/dist/angular-ui-notification.min.css", rel="stylesheet")
        link(href="${ContextPath}/assets/css/admin/admin.css?version=#{VERSION}#" rel="stylesheet")
    body#module-admin-leyun.nav-md.footer_fixed(ng-controller="IndexCtrl")
        style.
            .nav.navbar-nav.nav_fff > li > a {
                color: #fff !important;
            }

            .top_nav .nav > li > a:focus, .top_nav .nav > li > a:hover {
                background: #009DD9;
            }

            .nav > li > a:focus, .nav > li > a:hover {
                background-color: #009DD9;
            }

            .nav_menu .nav.nav_000 > li > a {
                color: #73879C;
            }
        .container.body
            .top_nav.navbar-static-top.ml-0
                .nav_menu.none-margin
                    nav
                        ul.nav.navbar-nav.nav_fff.logo
                            li
                                a.span-pointer
                                    span.brandname.white 乐运旅游管理系统
                            li
                                a.span-pointer(ui-sref="dashboard") 首页

                        ul.nav.navbar-nav.navbar-right.nav_000(style="width: auto;")
                            li(uib-dropdown)
                                a.span-pointer.dropdown-toggle(uib-dropdown-toggle, aria-haspopup="true", aria-expanded="false")
                                    span(ng-bind="User.username", style="color:#fff;")
                                ul.dropdown-menu.dropdown-usermenu.pull-right(uib-dropdown-menu)
                                    li
                                        a.black(ng-click="info()")
                                            | 个人资料
                                    li
                                        a.hand.black(ng-click="profile()")
                                            | 修改密码
                                    li.divider
                                    li
                                        a.hand.black(ng-click="logout()")
                                            | 退出

            .x_content
                .ui-view.container-fluid

            footer
                .pull-right © 2017
        script.
            var Context = '${ContextPath}';
            var Assets = '${ContextPath}/assets';
        script(src="${ContextPath}/webjars/jquery/2.2.4/dist/jquery.min.js")
        script(src="${ContextPath}/webjars/angular/1.5.8/angular.min.js")
        script(src="${ContextPath}/webjars/jquery-mousewheel/3.1.13/jquery.mousewheel.min.js")
        script(src="${ContextPath}/webjars/spin.js/2.3.2/spin.min.js")
        script(src="${ContextPath}/webjars/angular-spinner/0.8.1/angular-spinner.min.js")
        script(src="${ContextPath}/webjars/angular-resource/1.5.8/angular-resource.min.js")
        script(src="${ContextPath}/webjars/angular-messages/1.5.8/angular-messages.min.js")
        //script(src="${ContextPath}/webjars/angular-cookies/1.5.8/angular-cookies.min.js")
        script(src="${ContextPath}/webjars/angular-ui-router/0.3.1/release/angular-ui-router.min.js")
        script(src="${ContextPath}/webjars/angular-ui-bootstrap-bower/2.1.3/ui-bootstrap-tpls.min.js")
        script(src="${ContextPath}/webjars/angular-ui-notification/0.2.0/dist/angular-ui-notification.min.js")
        script(src="${ContextPath}/webjars/oclazyload/1.0.9/dist/ocLazyLoad.min.js")
        script(src="${ContextPath}/webjars/angular-ui-select/0.19.1/dist/select.min.js?version=0.19.1")
        script(src="${ContextPath}/assets/admin/js/admin.min.js?version=#{VERSION}#")


