doctype html
html(ng-app="app")
    head
        meta(http-equiv="Content-Type", content="text/html; charset=UTF-8")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title 登陆
        link(href="${ContextPath}/webjars/bootstrap-css/3.3.6/css/bootstrap.min.css", rel="stylesheet")
        link(href="${ContextPath}/webjars/gentelella/1.4.0/build/css/custom.min.css", rel="stylesheet")
        link(href="${ContextPath}/assets/css/admin/admin.css?version=#{VERSION}#" rel="stylesheet")
    body#page-login(ng-controller="LoginCtrl", style="background:#fff;")
        //img.img-responsive(src="${ContextPath}/assets/admin/img/login-logo.png")
        .login_wrapper
            .animate.form.login_form.login-box
                section
                h1.text-center.title-color(style="font-size:35px;") Inuyasha管理后台
                form.mt-xl(novalidate, name="form", ng-submit="form.$valid && login()")
                    .form-group(ng-class="{'has-error': (form.$submitted || form.account.$touched) && form.account.$invalid}")
                        input.form-control(type='text', name="account", ng-model="user.account", placeholder='用户名', required='',style="border-radius: 6px;margin: 0 0 10px;height: 45px;", ng-click="ui.loginMessage=''")
                        .help-block(ng-if="(form.$submitted || form.account.$touched) && form.account.$invalid", ng-bind="''")

                    .form-group(ng-class="{'has-error': (form.$submitted || form.password.$touched) && form.password.$invalid}")
                        input.form-control(type='password', name="password", ng-model="user.password", placeholder='密码', required='',style="border-radius: 6px;margin: 0 0 10px;height: 45px;", ng-click="ui.loginMessage=''")
                        .help-block(ng-if="(form.$submitted || form.password.$touched) && form.password.$invalid", ng-bind="''")

                    .form-group(ng-class="{'has-error': (form.$submitted || form.code.$touched) && form.code.$invalid}")
                        .input-group(style="width: 100%;")
                            input.form-control(type="text", placeholder="验证码" ng-model="user.code" ,name="code", required, style="margin: 0;")
                            span.input-group-btn.img-code
                        .help-block(ng-if="(form.$submitted || form.code.$touched) && form.code.$invalid", ng-bind="'验证码不正确'")

                    .form-group(style="height:15px")
                        .help-block.red(style="padding-left: 20px;", ng-bind="ui.loginMessage")

                    .form-group
                        button.btn.btn-dafault.btn-block.btn-bg-blue(type="submit", ng-bind="ui.submitting?'登录中...':'登  录'", ng-disabled="ui.submitting")


    script.
        var Context = '${ContextPath}';
        var Assets = '${ContextPath}/assets';
    script(src="${ContextPath}/webjars/angular/1.5.8/angular.min.js")
    script(src="${ContextPath}/webjars/angular-messages/1.5.8/angular-messages.min.js")
    //script(src="${ContextPath}/webjars/angular-cookies/1.5.8/angular-cookies.min.js")
    script(src="${ContextPath}/assets/js/admin/login.js?version=#{VERSION}#")
